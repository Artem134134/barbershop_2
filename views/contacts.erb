  <input name="email" type="email" class="form-control"  placeholder="name@example.com" value="<%= @email %>">
<br/>

</div>
<div class="mb-3">
  <label>Comment:</label>
  <textarea name="comment" type="text"class="form-control" rows="3" placeholder="text" value="<%= @comment %>"></textarea>
</div>

 <br/>
  <div class="mb-3">
